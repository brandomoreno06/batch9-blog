<div class="edit">
  <h1>(Editing) <%= @article.name %></h1>
  <h5>Last updated: <%= @article.updated_at.to_formatted_s(:long) %></h5>

  <%= form_with scope: :article, url: update_article_path, method: :patch, local: true, class: "article__form" do |form| %>
    <%= render 'form', article: @article, f: form %>
  <% end %>
</div>
