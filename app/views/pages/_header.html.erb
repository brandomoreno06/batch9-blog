<div class="header container-fluid">
  <%= link_to articles_path do %>
    <h1>Blogify</h1>
  <% end %>

  <nav>
    <%= link_to 'Home', articles_path %>
    <% if current_user %>
      <%= link_to 'Dashboard', dashboard_path %>
    <% end %>
    <%= link_to 'Create Article', new_article_path %>
  </nav>

  <div>
    <% if user_logged_in? %>
      <span>Logged in as<strong> <%= current_user.username %></strong></span>
      <%= link_to "Logout", delete_session_path, method: :delete %>
    <% else %>
      <%= link_to "Login", login_path %>
      <%= link_to "Sign Up", create_user_path %>
    <% end %>
  </div>
</div>